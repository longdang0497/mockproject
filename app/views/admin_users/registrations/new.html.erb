<%= content_for :title_header do %>
    Sign up - Admin | SUITO
<% end %>
<div class="top_main_view">
  <section class="ex_mv_wrap">
    <div class="">
      <h1 class="ex_main_title">
        Sign up
      </h1>
    </div>
  </section>
  <div class="common_inner">
    <section class="privacy_wrap greeting_wrap">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form-group col-xs-6 col-sm-6 col-lg-6">
          <%= f.label :fullname%>
          <%= f.text_field :fullname, required: true, autofocus: true, placeholder: "Enter fullname", class: "form-control", autocomplete: "Your name" %>
        </div>
        <div class="form-group col-xs-6 col-sm-6 col-lg-6">
          <%= f.label :email%>
          <%= f.email_field :email, required: true, autofocus: true, placeholder: "Enter email", class: "form-control", autocomplete: "Your email" %>
        </div>
        <div class="form-group col-xs-6 col-sm-6 col-lg-6">
          <%= f.label :password%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, required: true, placeholder: "Enter password", class: "form-control", autocomplete: "new-password" %>
        </div>
        <div class="form-group col-xs-6 col-sm-6 col-lg-6">
          <%= f.label :password_confirmation%>
          <%= f.password_field :password_confirmation, required: true,  placeholder: "Enter password confirmation", class: "form-control", autocomplete: "new-password" %>
        </div>
        <div class="field form-group col-md-5">
          <%= f.hidden_field :role_id, :value => "1" %>
        </div>
        <%= f.submit "Sign up", class: "btn btn-primary btn-md" %>
      <% end %>
      <%= render "admin_users/shared/links" %>
    </section>
  </div>
</div>
