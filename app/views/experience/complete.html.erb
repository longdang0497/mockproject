<%= content_for :title_header do %>
  Booking - Complete | SUITO
<% end %>

<div class="top_main_view">
    <%= render 'experience/commons/ex_mv_wrap' %>
    <div class="common_inner">
      <%= render 'components/form_step_list' %>
      <div class="exdetail_wrap clearfix">
        <section class="exdetail_left_block payment_left_block" style="height: 646px;">
          <p class="thanks_common_text">
            We have confirmed your payment.<br>
            Thank you for your reservation.<br><br>
            This is your Voucher.<br>
            Please arrive on time for the experience and show it.
          </p>
          <a href="" class="thanks_map_link" target="_blank" rel="nofollow">MAP</a>
          <p class="thanks_common_text">
            You can send a Voucher to your friends and family by SNS or Email.
          </p>
          <div class="thanks_sns_mail_block">
            <div class="thanks_sns_block">
              <a href="https://www.facebook.com/share.php?u=http%3A%2F%2Fsuitojp.herokuapp.com%2F&title=Home%20-%20SUITO" class="thanks_sns_btn">
                <img src=<%= image_path("common/side_fb.png") %> >
              </a>
              <a href="" class="thanks_sns_btn">
                <img src=<%= image_path("common/side_insta.png") %> >
              </a>
              <a href="http://twitter.com/home?status=Home%20-%20SUITO+http%3A%2F%2Fsuitojp.herokuapp.com%2F" class="thanks_sns_btn">
                <img src=<%= image_path("common/side_twitter.png") %> >
              </a>
              <p class="thanks_mail_btn" id="ThanksMail">
                <img src=<%= image_path("form/mail_icon.png") %> >
              </p>
            </div>
            <div class="thanks_mail_wrap">
              <form action="" method="" class="clearfix">
                <input type="text" name="mail_to" class="thanks_mail_input">
                <textarea name="mail_msg" class="thanks_msg" placeholder="Massege..."></textarea>
                <input type="submit" value="send" class="thanks_submit">
              </form>
            </div>
          </div>
          <p class="thanks_cancel_text">
            <span>*Cancellation policy</span>
            Get a full refund if you cancel within 24 hours of purchase.<br>
            Please call SUiTO : 092-724-1055 
          </p>
        </section>
        <aside class="exdetail_right_block" style="height: 646px; padding-bottom: 100px;">
          <div class="exdetail_right_top thanks" style="position: absolute; top: 0px;">
            <div class="panment_aside_top">
              <p class="payment_aside_date" id="show-first-choice"></p>
              <p class="payment_aside_time">
                <span class="start"><span id="show-first-starttime"></span> start</span>
                <span class="range"><%= @experience.duration %> total</span>
              </p>
            </div>
            <div class="form_aside_box">
              <p class="form_aside_box_title" id="show-guest-name"></p>
              <table class="payment_aside_table">
                <tbody><tr>
                  <td><%= number_to_currency(@experience.price_adult.to_f, unit: "$US", precision: 2, separator: ".", delimiter: ",", format: "%u %n")%></td>
                  <td><span id="show-num-adults"></span> adults</td>
                  <td><span id="show-total-adults"></span></td>
                </tr>
                <tr>
                  <td><%= number_to_currency(@experience.price_children.to_f, unit: "$US", precision: 2, separator: ".", delimiter: ",", format: "%u %n")%></td>
                  <td><span id="show-num-children"></span> children</td>
                  <td><span id="show-total-children"></span></td>
                </tr>
                <tr>
                  <td><%= number_to_currency(@experience.price_infant.to_f, unit: "$US", precision: 2, separator: ".", delimiter: ",", format: "%u %n")%></td>
                  <td><span id="show-num-infants"></span> infants</td>
                  <td><span id="show-total-infants"></span></td>
                </tr>
                <tr>
                  <td colspan="2" class="big">Interpreter</td>
                  <td>$US 200.00</td>
                </tr>
                <tr>
                  <td colspan="2" class="bold">Total</td>
                  <td class="bold"><span id="show-total"></span></td>
                </tr>
              </tbody></table>
            </div>
            <div class="form_aside_box">
              <p class="form_aside_box_title">Provided</p>
              <p class="form_aside_box_text">
                ・Shodo trial set<br>
                ・T-Shirt<br>
                ・Tea or water
              </p>
            </div>
            <div class="form_aside_box">
              <p class="form_aside_box_title">Cancellation policy</p>
              <p class="form_aside_box_text">
                Get a full refund if you cancel within 24 hours of purchase.
              </p>
            </div>
            <div class="form_aside_box">
	            <p class="form_aside_box_title">SUiTO FUKUOKA Rental space</p>
              <p class="payment_aside_address">
                1-2-29, Imaizumi, Chuo-ku , Fukuoka city
              </p>
              <p class="payment_aside_address">
                TEL : 092-724-1055 
              </p>
              <a href="" class="payment_map_btn">Map</a>
            </div>
            
