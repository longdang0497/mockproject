<%= content_for :title_header do %>
  Booking - Confirm | SUITO
<% end %>

<div class="top_main_view">
  <%= render 'experience/commons/ex_mv_wrap' %>
  <div class="common_inner">
    <%= render 'components/form_step_list' %>
    <div class="exdetail_wrap clearfix">
      <section class="exdetail_left_block">
        <div class="form_wrap">
          <form action="<%= sendrequest_experience_path(@experience.id) %>">
            <div class="form_day_wrap">
              <div class="form_day_title_block">
                <p class="form_common_title"><%= t('.day') %></p>
                <p class="form_common_title"><%= t('.start') %></p>
              </div>
              <div class="form_day_common_block">
                <p class="form_common_title sp"><%= t('.day') %></p>
                <p class="form_confirm_text big" id="show-first-choice"></p>
                <%= hidden_field_tag(:first_choice, params['first_choice']) %>
                <p class="form_common_title sp"><%= t('.start') %></p>
                <p class="form_confirm_text small" id="show-first-starttime"></p>
                <%= hidden_field_tag(:first_starttime, params['first_starttime']) %>
                <p class="form_choice_text"><%= t('.first') %><span>*</span></p>
              </div>
              <div class="form_day_common_block">
                <p class="form_common_title sp"><%= t('.day') %></p>
                <p class="form_confirm_text big" id="show-second-choice"></p>
                <%= hidden_field_tag(:second_choice, params['second_choice']) %>
                <p class="form_common_title sp"><%= t('.start') %></p>
                <p class="form_confirm_text small" id="show-second-starttime"></p>
                <%= hidden_field_tag(:second_starttime, params['second_starttime']) %>
                <p class="form_choice_text"><%= t('.second') %></p>
              </div>
              <div class="form_day_common_block">
                <p class="form_common_title sp"><%= t('.day') %></p>
                <p class="form_confirm_text big" id="show-third-choice"></p>
                <%= hidden_field_tag(:third_choice, params['third_choice']) %>
                <p class="form_common_title sp"><%= t('.start') %></p>
                <p class="form_confirm_text small" id="show-third-starttime"></p>
                <%= hidden_field_tag(:third_starttime, params['third_starttime']) %>
                <p class="form_choice_text"><%= t('.third') %></p>
              </div>
            </div>
            <div class="form_people_wrap">
              <p class="form_common_title"><%= t('.number') %><span>*</span></p>
              <div class="form_confirm_people_inner">
                <div class="form_confirm_people_common">
                  <p class="form_confirm_text first"><%= t('.adults') %></p>
                  <p class="form_confirm_text" id="show-num-adults"></p>
                  <%= hidden_field_tag(:numAdults, params['numAdults']) %>
                  <p class="form_confirm_text">x</p>
                  <p class="form_confirm_text"><%= number_to_currency(@experience.price_adult.to_f, unit: "$US", precision: 2, separator: ".", delimiter: ",", format: "%u %n")%></p>                  
                  <p class="form_confirm_text">=</p>
                  <p class="form_confirm_text" id="show-total-adults"></p>
                </div>
                <div class="form_confirm_people_common">
                  <p class="form_confirm_text first"><%= t('.children') %><span>(2-12)</span></p>
                  <p class="form_confirm_text" id="show-num-children"></p>
                  <%= hidden_field_tag(:numChildren, params['numChildren']) %>
                  <p class="form_confirm_text">x</p>
                  <p class="form_confirm_text"><%= number_to_currency(@experience.price_children.to_f, unit: "$US", precision: 2, separator: ".", delimiter: ",", format: "%u %n")%></p>
                  <p class="form_confirm_text">=</p>
                  <p class="form_confirm_text" id="show-total-children"></p>
                </div>
                <div class="form_confirm_people_common">
                  <p class="form_confirm_text first"><%= t('.infant') %><span>(<2)</span></p>
                  <p class="form_confirm_text" id="show-num-infants"></p>
                  <%= hidden_field_tag(:numInfants, params['numInfants']) %>
                  <p class="form_confirm_text">x</p>
                  <p class="form_confirm_text"><%= number_to_currency(@experience.price_infant.to_f, unit: "$US", precision: 2, separator: ".", delimiter: ",", format: "%u %n")%></p>
                  <p class="form_confirm_text">=</p>
                  <p class="form_confirm_text" id="show-total-infants"></p>
                </div>
              </div>
            </div>
            <div class="form_interpreter_wrap">
              <p class="form_common_title"><%= t('.interpreter') %><span>*</span></p>
              <div class="form_confirm_interpreter_inner">
                <p class="form_confirm_text" id="interpret"></p>
                <p class="form_confirm_text" id="interpret-price"></p>
                <%= hidden_field_tag(:interpreter, params['interpreter']) %>
              </div>
              <p class="form_subtext"><%= t('.charge') %> <span>$US 200.00</span> <%= t('.requesting') %></p>
              <div class="form_confirm_interpreter_bottom clearfix">
                <div class="total">
                  <p class="form_confirm_text"><%= t('.total1') %></p>
                  <p class="form_confirm_text" id="show-total" ></p>
                  <%= hidden_field_tag(:total, params['total']) %>
                </div>
              </div>
            </div>
            <!--
              <div class="form_profile_wrap">
                <p class="form_common_title">Guest Information</p>
                <div class="form_profile_inner">
                  <div class="form_profile_title">
                    <p class="form_common_title">Name<span>*</span></p>
                    <p class="form_confirm_text">Ms. Abby Suzuki</p>
                  </div>
                </div>
              </div>
-->
            <div class="form_sub_profile_wrap">
              <p class="form_common_title"><%= t('.guest_info') %></p>
              <p class="form_common_title"><%= t('.name') %><span>*</span></p>
              <p class="form_confirm_text" id="show-guest-name"></p>
              <%= hidden_field_tag(:guesttitle, params['guest-title']) %>
              <%= hidden_field_tag(:guestfirstname, params['guest-firstname']) %>
              <%= hidden_field_tag(:guestlastname, params['guest-lastname']) %>
              <p class="form_common_title"><%= t('.age') %><span>*</span></p>
              <p class="form_confirm_text" id="show-guest-age"></p>
              <%= hidden_field_tag(:age, params['age']) %>
              <p class="form_common_title"><%= t('.nationality') %></p>
              <p class="form_confirm_text" id="show-guest-nationality"></p>
              <%= hidden_field_tag(:nationality, params['nationality']) %>
              <p class="form_common_title"><%= t('.language') %><span>*</span></p>
              <p class="form_confirm_text" id="show-guest-language"></p>
              <%= hidden_field_tag(:language, params['language']) %>
              <p class="form_common_title"><%= t('.phone') %></p>
              <p class="form_confirm_text" id="show-guest-phone"></p>
              <%= hidden_field_tag(:phonenumber, params['phone-number']) %>
              <p class="form_common_title"><%= t('.email') %><span>*</span></p>
              <p class="form_confirm_text" id="show-guest-email"></p>
              <%= hidden_field_tag(:email, params['email']) %>
              <p class="form_common_title"><%= t('.address') %></p>
              <p class="form_confirm_text" id="show-guest-address"></p>
              <%= hidden_field_tag(:address, params['address']) %>
              <div class="form_sub_others_confirm">
                <p class="form_sub_confirm_text"><span class="bold"><%= t('.notguest') %></span><%= t('.making') %> </p>
                <p class="form_common_title"><%= t('.name') %><span>*</span></p>
                <p class="form_confirm_text" id="show-representative-name"></p>
                <%= hidden_field_tag(:representativetitle, params['representative-title']) %>
                <%= hidden_field_tag(:representativefirstname, params['representative-firstname']) %>
                <%= hidden_field_tag(:representativelastname, params['representative-lastname']) %>
                <p class="form_common_title"><%= t('.email') %><span>*</span></p>
                <p class="form_confirm_text" id="show-representative-email"></p>
                <%= hidden_field_tag(:representativeemail, params['representative-email']) %>
                <p class="form_sub_confirm_text" id="show-confirm-email"></span></p>
              </div>
            </div>
            <input type="submit" id="sendrequest" value="Send request" class="form_subtmit_btn">
          </form>
        </div>
      </section>
      <aside class="exdetail_right_block" style="height: 1816px;">
        <div class="exdetail_right_top" style="position: absolute; top: 0px;">
          <% if @experience.image.attached? %>
          <div class="exdetail_main_pic" style="background: url(<%= url_for(@experience.image) %>) center center no-repeat;background-size: cover;"></div>
          <% else %>
          <div class="exdetail_main_pic" style="background: url(<%= image_url("ex/pic01.jpg") %>) center center no-repeat;background-size: cover;"></div>
          <% end %>
          <p class="form_aside_pic_info"><a href="">Host <%= @experience.admin_user.fullname %></a></p>
          <table class="form_aside_table">
            <tbody>
              <tr>
                <th>
                  
                  <img src=<%= image_path("form/money.png") %> alt="money">
                </th>
                <td>
                  <span><%= number_to_currency(@experience.price_adult.to_f, unit: "$US", precision: 2, separator: ".", delimiter: ",", format: "%u %n")%></span>/guest
                </td>
              </tr>
              <tr>
                <th>
                  <img src=<%= image_path("form/time.png") %> alt="time">
                </th>
                <td>
                  <%= @experience.duration %> <%= t('.total1') %>
                </td>
              </tr>
              <tr>
                <th>
                  <img src=<%= image_path("form/place.png") %> alt="place">
                </th>
                <td>
                  <%= @experience.location.province %>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="form_aside_box">
            <p class="form_aside_box_title"><%= t('.provide') %></p>
            <p class="form_aside_box_text">
              ・Shodo trial set<br>
              ・T-Shirt<br>
              ・Tea or water
            </p>
          </div>
          <div class="form_aside_box">
            <p class="form_aside_box_title"><%= t('.cancellation') %></p>
            <p class="form_aside_box_text">
              <%= t('.cancellation1') %>
            </p>
          </div>
        </div>
      </aside>
    </div>
  </div>
</div>
